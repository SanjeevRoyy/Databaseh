<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubjectAdd">
    <EditText

        android:id="@+id/subid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Subject" />
    <EditText

        android:layout_below="@+id/subid"
        android:id="@+id/passmarksid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Pass Marks" />
    <EditText

        android:layout_below="@+id/passmarksid"
        android:id="@+id/fullmarksid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Full Marks" />

    <Button
        android:id="@+id/buttonsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullmarksid"
        android:layout_marginTop="10dp"
        android:text="Save" />
    <Button
        android:layout_toRightOf="@+id/buttonsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/buttoncancel"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/fullmarksid"/>

</RelativeLayout>